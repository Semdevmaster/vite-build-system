root = true

[*]
indent_style = space
indent_size = 2
tab_width = 4
charset = utf-8
end_of_line = lf
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[*.xml]
indent_size = 4

[*.yml]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
